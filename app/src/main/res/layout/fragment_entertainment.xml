 <androidx.constraintlayout.widget.ConstraintLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:context="com.example.eduffer.NavigationMenu.Home.TabLayout.EntertainmentFragment">

     <androidx.cardview.widget.CardView
         android:layout_width="90dp"
         android:layout_height="90dp"
         android:layout_gravity="center"
         android:elevation="25dp"
         android:innerRadius="0dp"
         android:shape="ring"
         app:cardBackgroundColor="@color/white"
         app:cardCornerRadius="55dp"
         android:layout_marginTop="200dp"
         android:layout_marginBottom="150dp"
         android:id="@+id/amazonprime_cardView"
         app:layout_constraintBottom_toTopOf="@+id/spotify_cardView"
         app:layout_constraintEnd_toEndOf="parent"
         app:layout_constraintStart_toStartOf="parent"
         app:layout_constraintTop_toTopOf="parent">

         <ImageView
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             android:layout_gravity="center"
             android:src="@drawable/amazon_prime" />

     </androidx.cardview.widget.CardView>

            <TextView
                android:id="@+id/AmazonPrime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="@string/amazon_prime"
                android:fontFamily="@font/crete_round"
                android:textColor="?android:textColorPrimary"
                android:textSize="17sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/amazonprime_cardView" />

     <androidx.cardview.widget.CardView
         android:id="@+id/spotify_cardView"
         android:layout_width="90dp"
         android:layout_height="90dp"
         android:layout_gravity="center"
         android:layout_marginTop="120dp"
         android:layout_marginBottom="300dp"
         android:elevation="25dp"
         android:innerRadius="0dp"
         android:shape="ring"
         app:cardBackgroundColor="@color/white"
         app:cardCornerRadius="55dp"
         app:layout_constraintBottom_toBottomOf="parent"
         app:layout_constraintEnd_toEndOf="parent"
         app:layout_constraintStart_toStartOf="parent"
         app:layout_constraintTop_toBottomOf="@+id/AmazonPrime">

         <ImageView
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:layout_gravity="center"
             android:src="@drawable/spotify_app_logo" />
     </androidx.cardview.widget.CardView>

     <TextView
         android:id="@+id/Spotify"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_marginTop="10dp"
         android:fontFamily="@font/crete_round"
         android:text="@string/spotify"
         android:textColor="?android:textColorPrimary"
         android:textSize="17sp"
         android:textStyle="bold"
         app:layout_constraintEnd_toEndOf="parent"
         app:layout_constraintStart_toStartOf="parent"
         app:layout_constraintTop_toBottomOf="@+id/spotify_cardView" />

        </androidx.constraintlayout.widget.ConstraintLayout>