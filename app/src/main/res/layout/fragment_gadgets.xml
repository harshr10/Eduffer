<ScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        tools:context="com.example.eduffer.NavigationMenu.Home.TabLayout.GadgetsFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <androidx.cardview.widget.CardView
                android:id="@+id/ableton_cardView"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_gravity="center"
                android:layout_marginStart="60dp"
                android:layout_marginTop="30dp"
                android:elevation="25dp"
                android:innerRadius="0dp"
                android:shape="ring"
                app:cardBackgroundColor="@color/white"
                app:cardCornerRadius="55dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:src="@drawable/ableton" />
            </androidx.cardview.widget.CardView>

            <TextView
                android:id="@+id/Ableton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="74dp"
                android:layout_marginTop="10dp"
                android:text="@string/ableton"
                android:fontFamily="@font/crete_round"
                android:gravity="center"
                android:textColor="?android:textColorPrimary"
                android:textSize="17sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/ableton_cardView" />

            <androidx.cardview.widget.CardView
                android:id="@+id/acer_cardView"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_gravity="center"
                android:layout_marginTop="30dp"
                android:layout_marginEnd="60dp"
                android:elevation="25dp"
                android:innerRadius="0dp"
                android:shape="ring"
                app:cardBackgroundColor="@color/white"
                app:cardCornerRadius="55dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:src="@drawable/acer" />
            </androidx.cardview.widget.CardView>

            <TextView
                android:id="@+id/Acer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="83dp"
                android:fontFamily="@font/crete_round"
                android:text="@string/acer"
                android:textColor="?android:textColorPrimary"
                android:textSize="17sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/acer_cardView" />

            <androidx.cardview.widget.CardView
                android:id="@+id/apple_cardView"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_gravity="center"
                android:layout_marginStart="60dp"
                android:layout_marginTop="40dp"
                android:elevation="25dp"
                android:innerRadius="0dp"
                android:shape="ring"
                app:cardBackgroundColor="@color/white"
                app:cardCornerRadius="55dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/Ableton">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:src="@drawable/apple" />
            </androidx.cardview.widget.CardView>

            <TextView
                android:id="@+id/Apple"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="82dp"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/crete_round"
                android:text="@string/apple"
                android:textColor="?android:textColorPrimary"
                android:textSize="17sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/apple_cardView" />

            <androidx.cardview.widget.CardView
                android:id="@+id/hp_cardView"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_gravity="center"
                android:layout_marginTop="40dp"
                android:layout_marginEnd="60dp"
                android:elevation="25dp"
                android:innerRadius="0dp"
                android:shape="ring"
                app:cardBackgroundColor="@color/white"
                app:cardCornerRadius="55dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/Acer">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:src="@drawable/colors_hp_logo" />
            </androidx.cardview.widget.CardView>

            <TextView
                android:id="@+id/HP"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="95dp"
                android:fontFamily="@font/crete_round"
                android:gravity="center"
                android:text="@string/hp"
                android:textColor="?android:textColorPrimary"
                android:textSize="17sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/hp_cardView" />


            <androidx.cardview.widget.CardView
                android:id="@+id/lenovo_cardView"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_gravity="center"
                android:layout_marginStart="60dp"
                android:layout_marginTop="40dp"
                android:elevation="25dp"
                android:innerRadius="0dp"
                android:shape="ring"
                app:cardBackgroundColor="@color/darkred"
                app:cardCornerRadius="55dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/Apple">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:src="@drawable/lenovo" />
            </androidx.cardview.widget.CardView>

            <TextView
                android:id="@+id/Lenovo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="79dp"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/crete_round"
                android:gravity="center"
                android:text="@string/lenovo"
                android:textColor="?android:textColorPrimary"
                android:textSize="17sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/lenovo_cardView" />

            <androidx.cardview.widget.CardView
                android:id="@+id/gmicrosoft_cardView"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_gravity="center"
                android:layout_marginTop="40dp"
                android:layout_marginEnd="60dp"
                android:elevation="25dp"
                android:innerRadius="0dp"
                android:shape="ring"
                app:cardBackgroundColor="@color/white"
                app:cardCornerRadius="55dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/HP">

                <ImageView
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:layout_gravity="center"
                    android:src="@drawable/microsoft" />

            </androidx.cardview.widget.CardView>

            <TextView
                android:id="@+id/GMicrosoft"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="62dp"
                android:text="@string/microsoft"
                android:fontFamily="@font/crete_round"
                android:textColor="?android:textColorPrimary"
                android:textSize="17sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/gmicrosoft_cardView" />

            <androidx.cardview.widget.CardView
                android:id="@+id/oneplus_cardView"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_gravity="center"
                android:layout_marginStart="60dp"
                android:layout_marginTop="40dp"
                android:elevation="25dp"
                android:innerRadius="0dp"
                android:shape="ring"
                app:cardBackgroundColor="@color/white"
                app:cardCornerRadius="55dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/Lenovo">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/oneplus_logo" />
            </androidx.cardview.widget.CardView>

            <TextView
                android:id="@+id/Oneplus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="73dp"
                android:layout_marginTop="10dp"
                android:text="@string/oneplus"
                android:textColor="?android:textColorPrimary"
                android:fontFamily="@font/crete_round"
                android:textSize="17sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/oneplus_cardView" />

            <androidx.cardview.widget.CardView
                android:id="@+id/realme_cardView"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_gravity="center"
                android:layout_marginTop="40dp"
                android:layout_marginEnd="60dp"
                android:elevation="25dp"
                android:innerRadius="0dp"
                android:shape="ring"
                app:cardBackgroundColor="@color/white"
                app:cardCornerRadius="55dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/GMicrosoft">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/realme" />
            </androidx.cardview.widget.CardView>

            <TextView
                android:id="@+id/Realme"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="73dp"
                android:fontFamily="@font/crete_round"
                android:text="@string/realme"
                android:textColor="?android:textColorPrimary"
                android:textSize="17sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/realme_cardView" />

            <androidx.cardview.widget.CardView
                android:id="@+id/samsung_cardView"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_gravity="center"
                android:layout_marginTop="30dp"
                android:elevation="25dp"
                android:innerRadius="0dp"
                android:shape="ring"
                app:cardBackgroundColor="@color/white"
                app:cardCornerRadius="55dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/Oneplus">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/samsung_orig_wordmark_blue_rgb" />
            </androidx.cardview.widget.CardView>

            <TextView
                android:id="@+id/Samsung"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="60dp"
                android:fontFamily="@font/crete_round"
                android:text="@string/samsung"
                android:textColor="?android:textColorPrimary"
                android:textSize="17sp"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/samsung_cardView" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>